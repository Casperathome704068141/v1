rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    function isAdmin() {
      // NOTE: This is the secure, production-ready way to check for an admin.
      // This will work once the custom claim is set on your user account.
      return request.auth.token.admin == true;
    }

    match /users/{userId}/{path=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    match /applications/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow update, delete: if isAdmin();
    }

    match /mail/{docId} {
      allow create: if isAdmin();
    }

    // Rules for the 'appointments' collection.
    match /appointments/{apptId} {
      allow create: if request.auth != null && request.resource.data.userId == request.auth.uid;
      
      // TEMPORARY DEBUGGING RULE: Allow any authenticated user to read/write.
      // WARNING: Insecure for production.
      allow read, update, delete: if request.auth != null;
    }

    // Rules for the 'settings' collection.
    match /settings/{docId} {
      // TEMPORARY DEBUGGING RULE: Allow any authenticated user to read/write.
      // WARNING: Insecure for production.
      allow read, write: if request.auth != null;
    }

    match /news/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
