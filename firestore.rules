rules_version = '2';
service cloud.firestore {
  match /databases/{db}/documents {
    function signedIn() { return request.auth != null; }
    function isAdmin() { return signedIn() && request.auth.token.role == 'admin'; }
    function isStaff() { return signedIn() && (request.auth.token.role == 'staff' || isAdmin()); }
    function ownsApp(appId) {
      return signedIn() &&
        get(/databases/$(db)/documents/applications/$(appId)).data.userId == request.auth.uid;
    }

    match /users/{uid} {
      allow read: if isAdmin() || isStaff() || (signedIn() && request.auth.uid == uid);
      allow create: if signedIn() && request.auth.uid == uid;
      allow update: if isAdmin() || (signedIn() && request.auth.uid == uid);
      allow delete: if isAdmin();
    }

    match /applications/{appId} {
      allow read: if isAdmin() || isStaff() || ownsApp(appId);
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow update: if isAdmin() || isStaff() ||
                    (ownsApp(appId) && request.resource.data.userId == request.auth.uid);
      allow delete: if isAdmin();

      match /{sub=**}/{docId} {
        allow read, create, update, delete: if isAdmin() || isStaff() || ownsApp(appId);
      }
    }

    match /appointments/{id} {
      allow read: if isAdmin() || isStaff() || (signedIn() && resource.data.userId == request.auth.uid);
      allow create: if signedIn() && request.resource.data.userId == request.auth.uid;
      allow update, delete: if isAdmin() || isStaff() ||
                            (signedIn() && resource.data.userId == request.auth.uid);
    }

    match /messages/{id} {
      allow read, create: if isAdmin() || isStaff() ||
                          (signedIn() && (request.resource.data.userId == request.auth.uid ||
                                          resource.data.userId == request.auth.uid));
      allow update, delete: if isAdmin() || (signedIn() && resource.data.authorId == request.auth.uid);
    }

    match /forumPosts/{postId} {
      allow read: if true;
      allow create: if signedIn();
      allow update, delete: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);
      match /replies/{replyId} {
        allow read: if true;
        allow create: if signedIn();
        allow update, delete: if isAdmin() || (signedIn() && resource.data.userId == request.auth.uid);
      }
    }

    match /learningModules/{moduleId} {
      allow read: if true;
      allow write: if isAdmin() || isStaff();
    }

    match /adminLogs/{logId} {
      allow read, create: if isAdmin() || isStaff();
      allow update, delete: if isAdmin();
    }

    match /{document=**} { allow read, write: if false; }
  }
}

