rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // This single rule allows a logged-in user to read and write to their own
    // user document and any documents in any subcollections (e.g., quizResults, application).
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // Rules for the top-level applications collection, accessible by admins
    // and the user who created it.
    match /applications/{appId} {
      allow create: if request.auth.uid == request.resource.data.userId;
      allow read: if request.auth.uid == resource.data.userId || request.auth.token.admin == true;
      allow update, delete: if request.auth.token.admin == true;
    }

    // Admins can manage settings and news content.
    match /settings/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /news/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }
  }
}
