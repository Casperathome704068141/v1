rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for admin custom claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for users collection and their sub-collections (like application drafts)
    match /users/{userId}/{document=**} {
      allow read, write: if request.auth.uid == userId || isAdmin();
    }
    
    // Rules for submitted applications
    match /applications/{applicationId} {
      allow read, update, delete: if isAdmin();
      // Users should not be able to create new top-level applications directly
      allow create: if false; 
    }
    
    // Rules for appointments
    match /appointments/{appointmentId} {
      // TEMPORARY DEBUGGING RULE: Allow any logged-in user to create an appointment.
      allow create: if request.auth.uid != null;

      // A user can read their own appointment, admins can read any.
      allow read: if request.auth.uid == resource.data.userId || isAdmin();
      
      // Only admins can change an appointment's status or delete it.
      allow update, delete: if isAdmin();
    }
    
    // Rules for general app settings
    match /settings/{settingId} {
      allow read, write: if isAdmin();
    }

    // Rules for news/CMS posts
    match /news/{newsId} {
      // Anyone can read news
      allow read: if true;
      // Only admins can create/edit news
      allow write: if isAdmin();
    }
    
    // Rule for the 'application' collection group query used by admins
    match /{path=**}/application/{applicationId} {
       allow read, list: if isAdmin();
    }
  }
}
