
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper functions to make rules cleaner
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }

    // Check for admin custom claim
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // USER DATA
    // Users can read and update their own profile.
    // Admins can read and update any user profile.
    match /users/{userId} {
      allow read, update: if isOwner(userId) || isAdmin();
      allow create: if isSignedIn();
    }

    // USER SUBCOLLECTIONS
    match /users/{userId}/{subcollection}/{docId} {
      // Users can manage their own application drafts, notifications, messages, etc.
      allow read, write, create, delete: if isOwner(userId);
    }
    
    // ADMIN-ONLY LISTS
    // Admins need list access for the main admin tables.
    match /applications/{applicationId} {
      allow list: if isAdmin();
      allow read: if isAdmin() || get(/databases/$(database)/documents/applications/$(applicationId)).data.userId == request.auth.uid;
      allow create: if isSignedIn();
      allow update: if isAdmin();
      
      // STATUS HISTORY SUBCOLLECTION
      match /statusHistory/{historyId} {
         allow read: if isAdmin() || get(/databases/$(database)/documents/applications/$(applicationId)).data.userId == request.auth.uid;
         allow create, update: if isAdmin();
      }
    }
    
    match /appointments/{appointmentId} {
        allow list: if isAdmin();
        allow read: if isAdmin() || resource.data.userId == request.auth.uid;
        allow create: if isOwner(resource.data.userId);
        allow update: if isAdmin();
    }

    // PUBLIC/AUTHENTICATED-READ COLLECTIONS
    match /news/{newsId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /forumPosts/{postId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /learningHub/{docId} {
      allow read: if isSignedIn();
      allow write: if isAdmin();
    }
    
    match /settings/general {
        allow read: if true;
        allow write: if isAdmin();
    }
  }
}
