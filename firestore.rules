
rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {

    // This rule allows a user to read and write their own main user document
    match /users/{userId} {
      allow read, write: if request.auth.uid == userId;
    }

    // This rule allows a user to read and write any document in any subcollection
    // under their own user document (e.g., quizResults, application drafts)
    match /users/{userId}/{documents=**} {
      allow read, write: if request.auth.uid == userId;
    }

    // --- Admin & Public Collection Rules ---

    // The top-level 'applications' collection is for final submissions
    match /applications/{appId} {
      // A user can create their own application submission
      allow create: if request.auth.uid == request.resource.data.userId;

      // A user can read their own submission; an admin can read any submission
      allow read: if request.auth.uid == resource.data.userId || request.auth.token.admin == true;

      // Only admins can update or delete final submissions
      allow update, delete: if request.auth.token.admin == true;
    }

    // Admins have full access to settings and news
    match /settings/{docId} {
      allow read, write: if request.auth.token.admin == true;
    }
    match /news/{docId} {
       allow read, write: if request.auth.token.admin == true;
    }
  }
}
