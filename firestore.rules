
rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {

    // Helper function to check for the admin custom claim on the user's token.
    function isAdmin() {
      return request.auth.token.admin == true;
    }

    // Rules for the 'users' collection and all sub-documents (drafts, quiz results, etc.).
    match /users/{userId}/{path=**} {
      // A user can read and write to their own documents.
      // An admin can also read and write to any user's documents.
      // This single rule covers:
      // - A user editing their own profile and application draft.
      // - An admin viewing a user's profile or draft.
      // - An admin changing a user's subscription plan.
      // - An admin's collectionGroup query for application drafts.
      allow read, write: if request.auth.uid == userId || isAdmin();
    }

    // Rules for the top-level 'applications' collection (for submitted apps).
    match /applications/{appId} {
      // A user can create their application document upon final submission.
      // The userId on the new document must match the user's own uid.
      allow create: if request.auth.uid == request.resource.data.userId;

      // An admin can perform any action on submitted applications.
      // A user can only read their own submitted application from this collection.
      allow read: if resource.data.userId == request.auth.uid || isAdmin();
      allow update, delete: if isAdmin();
    }

    // Rules for other admin-only collections.
    match /settings/{docId} {
      allow read, write: if isAdmin();
    }

    match /news/{docId} {
      allow read, write: if isAdmin();
    }
  }
}
