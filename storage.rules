
rules_version = '2';
service firebase.storage {
  match /b/{bucket}/o {
    // Allow users to read, write, and delete files only within their own user-specific folder.
    // The path segments ensure that a user can only access /users/{their-own-id}/*
    match /users/{userId}/{allPaths=**} {
      allow read, write, delete: if request.auth != null && request.auth.uid == userId;
    }
  }
}
